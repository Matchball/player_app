<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#001123">

<android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Organizers"
        android:textColor="#ffffff"
        app:layout_constraintLeft_toLeftOf="@+id/textView3"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="358dp"
        android:layout_height="41dp"
        android:text="Tournament Schedule"
        android:textSize="18sp"
        android:textColor="#ffffff"
        android:textAlignment="center"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="8dp"
        android:layout_height="17dp"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="8dp"
        android:background="#ff6263"
        android:text=""
        app:layout_constraintLeft_toRightOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        android:layout_marginStart="7dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="17dp"
        android:text="MatchBall"
        android:textColor="#ffffff"
        android:textAlignment="center"
        app:layout_constraintLeft_toRightOf="@+id/textView6"
        android:layout_marginLeft="4dp"
        app:layout_constraintTop_toTopOf="@+id/textView6"
        android:layout_marginStart="4dp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="8dp"
        android:layout_height="17dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="8dp"
        android:background="#bdbd16"
        app:layout_constraintLeft_toRightOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        android:layout_marginStart="15dp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="17dp"
        android:text="External"
        android:textColor="#ffffff"
        app:layout_constraintLeft_toRightOf="@+id/textView8"
        android:layout_marginLeft="4dp"
        app:layout_constraintTop_toTopOf="@+id/textView8"
        android:layout_marginStart="4dp" />

    <Button
        android:id="@+id/button4"
        android:layout_width="73dp"
        android:layout_height="20dp"
        android:text="List View"
        android:textColor="#FFFFFF"
        android:textAlignment="center"
        android:background="#001123"
        android:layout_marginTop="7dp"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintRight_toLeftOf="@+id/imageView2" />

    <LinearLayout
        android:id="@+id/notificationlayout"
        android:layout_width="358dp"
        android:layout_height="48dp"
        android:layout_marginTop="18dp"
        android:orientation="vertical"
        app:layout_constraintRight_toRightOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView9"
        tools:context="com.lenovo.matchpointf.Screen3"
        app:layout_constraintLeft_toLeftOf="@+id/textView"
        app:layout_constraintHorizontal_bias="1.0"></LinearLayout>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="30dp"
        android:layout_height="20dp"
        app:srcCompat="@drawable/list"
        app:layout_constraintRight_toRightOf="@+id/textView3"
        app:layout_constraintTop_toTopOf="@+id/button4" />

</android.support.constraint.ConstraintLayout>
</ScrollView>