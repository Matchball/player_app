<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.shree.player_nav_drawer.Drawer_Fragments.LeagueTables"
    android:background="#001123">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:paddingTop="0dp"
        android:weightSum="1">

        <TextView
            android:id="@+id/textView28"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:text="League Table"
            android:textSize="26dp"
            android:textColor="#26e2ff"
            android:layout_weight="0.51" />

        <TextView
            android:id="@+id/textView29"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            android:text="TextView"
            android:gravity="center_vertical|right"
            android:textSize="12dp"
            android:textColor="#26e2ff"
            android:layout_weight="0.28" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        android:paddingTop="@dimen/activity_horizontal_margin"
        android:weightSum="1">


        <TextView
            android:id="@+id/textView30"
            android:layout_width="50dp"
            android:layout_marginLeft="15dp"
            android:layout_height="23dp"
            android:layout_marginRight="-12dp"
            android:layout_marginTop="0dp"

            android:text="Category"
            android:background="#1f67b1"
            android:textAlignment="center"

            android:textColor="#FFFFFF" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="21dp"
            android:layout_marginStart="21dp"
            android:layout_marginTop="0dp"
            android:layout_gravity="center"

            android:backgroundTint="#FFFFFF"
            android:textColor="#FFFFFF"/>

        <TextView
            android:id="@+id/textView31"
            android:layout_width="35dp"
            android:layout_height="23dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:background="#1f67b1"
            android:text="City"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:layout_weight="0.24" />
        <Spinner
            android:id="@+id/spinner2"
            android:layout_width="112dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="9dp"
            android:layout_gravity="center"
            android:backgroundTint="#FFFFFF"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/textView32"
            android:layout_width="40dp"
            android:layout_height="23dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:text="MM/YY:"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:background="#1f67b1"
            android:layout_weight="0.19" />

        <Spinner
            android:id="@+id/spinner3"
            android:layout_width="126dp"
            android:layout_height="23dp"
            android:layout_marginLeft="0dp"
            android:layout_marginStart="21dp"
            android:layout_marginTop="0dp"
            android:layout_gravity="center"
            android:textColor="#FFFFFF"

            android:backgroundTint="#FFFFFF"
            />

     <Button
         android:id="@+id/perform"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"

         android:text="perform"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TableLayout
            android:id="@+id/table"
            android:stretchColumns="*"
            android:layout_width="351dp"
            android:layout_height="560dp"
            android:layout_marginTop="25dp"
            app:layout_constraintLeft_toLeftOf="@+id/textView30"
            app:layout_constraintTop_toBottomOf="@+id/spinner2"
            android:layout_marginRight="0dp"

            app:layout_constraintRight_toRightOf="@+id/textView32">

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"

                >

                <TextView
                    android:id="@+id/textView35"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_column="0"
                    android:text="Rank"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:textColor="@color/white" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_column="1"
                    android:text="City\nRank"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_column="2"
                    android:text="Name"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_column="3"
                    android:text="City"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:id="@+id/textView33"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_column="4"
                    android:text="Points"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:id="@+id/textView34"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_column="5"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:text="Avg.\nPoints"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF" />
            </TableRow>

        </TableLayout>

    </LinearLayout>

</LinearLayout>
